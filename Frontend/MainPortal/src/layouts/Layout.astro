---
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"
import SideMenu from "../components/SideMenu.astro"
import InitialRender from "../scripts/initialRender.astro"
import GetUserPreferences from "../scripts/GetUserPreferences.astro"
---
<!doctype html>
<html lang="en">
	<head>
		<InitialRender />
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Application Portal</title>
	</head>
	<body id="root" class="sm:overflow-auto">
		<div class="flex flex-row relative w-full h-auto ">
			<SideMenu />
			<div class="flex flex-col w-full h-auto">
				<Header />
				<div class="w-full h-auto background-primary text-primary">
					<slot />
				</div>
				<Footer />
			</div>
		</div>
		<GetUserPreferences />
	</body>
</html>


<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
