---
import Layout from "../layouts/Layout.astro";
import Script from "../scripts/setting/settingsScripts.astro"
import "../styles/global.css"
import { UserRoundCog,Palette,BellDot,ShieldCheck } from "lucide-static";
import Security from "../components/settings/security.astro";
import Profile from "../components/settings/profile.astro";
import Notifications from "../components/settings/notifications.astro";
import Appearance from "../components/settings/appearance.astro";
---
<Layout>
    <div class="min-h-dvh">
            <div class="text-primary text-4xl font-bold p-4">Settings</div>
            <div class="flex flex-row pt-4">
                <div class="flex flex-col items-start p-3 text-[16px] sm:text-[17px] md:text-[18px]">
                    <button class="text-primary text-secondary py-3 cursor-pointer font-semibold" id="profile"><div class="max-sm:hidden">Profile</div><div class="sm:hidden"><Fragment set:html={UserRoundCog}/></div></button>
                    <button class="text-primary text-secondary py-3 cursor-pointer font-semibold" id="appearance"><div class="max-sm:hidden">Appearance</div><div class="sm:hidden"><Fragment set:html={Palette}/></div></button>
                    <button class="text-primary text-secondary py-3 cursor-pointer font-semibold" id="notifications"><div class="max-sm:hidden">Notifications</div><div class="sm:hidden"><Fragment set:html={BellDot}/></div></button>
                    <button class="text-primary text-secondary py-3 cursor-pointer font-semibold" id="security"><div class="max-sm:hidden">Security</div><div class="sm:hidden"><Fragment set:html={ShieldCheck}/></div></button>
                </div>
                <div class="p-4 sm:p-2">
                    <Profile />
                    <Appearance />
                    <Notifications />
                    <Security />
                </div>
            </div>
    </div>
    <Script/>
</Layout>